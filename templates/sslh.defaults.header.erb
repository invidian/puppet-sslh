# Default options for sslh initscript
# sourced by /etc/init.d/sslh

RUN=yes

# binary to use: forked (sslh) or single-thread (sslh-select) version
DAEMON=/usr/sbin/sslh

DAEMON_OPTS="--user sslh <% @listen_address.to_a.each do |address| -%>--listen <%= address.to_s -%> <% end -%><% if @timeout %> -t <%= @timeout.to_s -%> <% end %> <% if @on_timeout %> --on-timeout <%= @on_timeout.to_s -%> <% end %>
